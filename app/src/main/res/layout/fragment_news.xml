<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="0"
        >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:id="@+id/share_facebook"
            android:layout_row="0"
            android:layout_column="0">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/background_image_dark"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:id="@+id/share_facebook_label"
                android:text="Retrouvez nos bar partenaire sur nightfall.fr"
                android:textAlignment="center"
                android:textSize="18sp"
                />

        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:id="@+id/share_twitter"
            android:layout_row="1"
            android:layout_column="0"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/reouverure_bar"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:id="@+id/share_twitter_label"
                android:text="La réouverture des bars et restaurants en France prévue le 2 juin 2020"
                android:textAlignment="center"
                android:textSize="18sp"
                />

        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:id="@+id/share_other"
            android:layout_row="2"
            android:layout_column="0"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/application"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:id="@+id/share_other_label"
                android:text="L'application Nightfall débarque !"
                android:textAlignment="center"
                android:textSize="18sp"
                />

        </GridLayout>
    </GridLayout>
</GridLayout>