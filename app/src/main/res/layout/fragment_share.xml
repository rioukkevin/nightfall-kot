<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/facebook"
            android:id="@+id/share_facebook_logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/share_facebook_label"
            android:text="@string/share_facebook_label"
            android:textAlignment="center"
            android:textSize="18sp" />

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/facebook"
            android:id="@+id/share_twitter_logo"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/share_twitter_label"
            android:text="@string/share_facebook_label"
            android:textAlignment="center"
            android:textSize="18sp" />

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/facebook"
            android:id="@+id/share_other_logo"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/share_other_label"
            android:text="@string/share_facebook_label"
            android:textAlignment="center"
            android:textSize="18sp" />

    </GridLayout>

</GridLayout>